@model LoginViewMode

@{
    ViewData["Title"] = "Login";
}

<h1>Iniciar Sesion</h1>

@if (ViewData.Keys.Contains("mensaje"))
{
    <p style="color: red;">
        @ViewData["mensaje"]
    </p>
}

<div class="card">
    <div class="card-body">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label><br>
                <input asp-for="Email" class="form-control" /><br>
                <span asp-validation-for="Email"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label><br>
                <input asp-for="Password" class="form-control" /><br>
                <span asp-validation-for="Password"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="Recuerdame" />
                <label class="form-check-label" asp-for="Recuerdame"></label>
            </div>

            <button class="btn btn-primary">Login</button>
            <a class="btn btn-success" asp-action="registro">Crear una nueva cuenta</a>

        </form>
    </div>
</div>

@section Scripts{
        <partial name="_ValidationScriptsPartial" />
}
