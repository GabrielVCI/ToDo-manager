<label><i class="bi bi-check-square"></i> Pasos de la tarea</label>

<button class="btn btn-secondary btn-sm" onclick="ManejarClickAgregarPaso()">
    <i class="bg-info bi-plus"></i>
</button>

<div id="reordenable-pasos" data-bind="foreach: pasos">
    <div class="mt-2">
        <div class="row">
            <div class="col-1">
                <input type="checkbox" class="form-check-input" name="chbPaso" 
                       data-bind="checked: realizado, 
                                  click: manejarClickCheckboxPaso,
                                  attr: {'data-id': id}" />
            </div>

            <div class="col-11">

                <span 
                    style="cursor: pointer" 
                    data-bind="text: descripcion, 
                               hidden: ModoEdicion, 
                               click: manejarClickDescripcionPaso, 
                               css: {'text-decoration-line-through': realizado}" ></span>

                <textarea 
                    name="txtPasoDescripcion" 
                    placeholder="Agregar una descripcion" 
                    class="form-control" 
                    data-bind="{value: descripcion, visible: ModoEdicion }"></textarea>
                          

                <div class="mt-2" data-bind="{visible: ModoEdicion }">
                    <button class="btn btn-primary" data-bind="{click: manejarClickSalvarPasos}">Salvar</button>
                    <button class="btn btn-secondary" data-bind="{click: manejarClickCancelarPasos}">Cancelar</button>

                    <button class="btn btn-danger" 
                    data-bind="{hidden: esNuevo, click: manejarClickBorrarPasos}">Borrar</button>
                </div>


            </div>
        </div>
    </div>
</div>