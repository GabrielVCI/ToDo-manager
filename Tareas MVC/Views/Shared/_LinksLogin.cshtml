@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> signInManager

<ul class="navbar-nav">
    @if(signInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-black ">Hola, @User.Identity.Name</span>
         </li>

         <li class="nav-item">
             <form class="form-inline" asp-action="logout" asp-controller="usuarios">
                <button type="submit" class="nav-link btn-link dark-text" style="border: none;">
                     Logout
                 </button>
             </form>
         </li>
    }else{

        <li class="nav-item">
            <a class="nav-link dark-text" asp-controller="usuarios" asp-action="Registro">
                Registro
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link dark-text" asp-controller="usuarios" asp-action="Login">
                Iniciar Sesion
            </a>
        </li> 
    }
</ul>